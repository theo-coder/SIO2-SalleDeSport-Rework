{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.email }}</td>
                <td>{{ contact.name }}</td>
                <td>
                    <a href="mailto:{{ contact.email }}">Répondre</a>
                    <a href="{{ path('contact_admin_show', {'id': contact.id}) }}">Détails</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de demandes de contact</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
