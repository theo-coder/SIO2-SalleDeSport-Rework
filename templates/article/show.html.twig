{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Dernière Modification</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if article.image %}<img style="max-height:50px; max-width:300px;" src="{{ asset(article.image) }}" alt="{{ article.image }}">{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
