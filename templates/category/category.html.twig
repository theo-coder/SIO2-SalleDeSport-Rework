{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1 class="mt-4 title">{{ category.name }}</h1>
        <div class='container'>
            <div class="row">
                {% for article in category.articles %}
                    <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                        <div class="card mb-5" style="width: 100%; max-height: 30rem; overflow:hidden;">
                            {% if article.image %}
                                <img src="{{ article.image|trim('.', 'left') }}" style="max-height:220px;" class="card-img-top" alt="">
                            {% else %}
                                <img src="https://via.placeholder.com/348x220&text=Â " style="max-height:220px;" class="card-img-top" alt="">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ article.name }}</h5>
                                <p class="card-text" style="max-height: 5rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">{{ article.content }}</p>
                                <a href="{{ path('article', {'id': article.id}) }}" class="btn btn-primary">Voir plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}